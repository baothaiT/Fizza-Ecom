@model Thinh_Ecom.Models.ProductModels

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string[] ProduceName = ViewBag.ProduceName;
}

<h1>Create</h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="pd_Name" class="control-label"></label>
                <input asp-for="pd_Name" id="pd_Name" class="form-control" onblur="checkProductName(@ProduceName)" required />
                <span id="pd_Name_validation" class="text-danger" style="color:red"></span>
            </div>
            <div class="form-group">
                <label asp-for="pd_Description" class="control-label"></label>
                <input asp-for="pd_Description" class="form-control" />
                <span asp-validation-for="pd_Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pd_Price" class="control-label"></label>
                <input asp-for="pd_Price" class="form-control" min="1" max="1000000" required />
                <span asp-validation-for="pd_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pd_Img1" class="control-label"></label>
                <input type="file" name="pd_Img1" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="pd_ShortDescription" class="control-label"></label>
                <input asp-for="pd_ShortDescription" class="form-control" />
                <span asp-validation-for="pd_ShortDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoriesFK" class="control-label"></label>
                <select asp-for="CategoriesFK" class="form-control" asp-items="ViewBag.idea_CategoriesId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>

        function checkProductName(var []ProductName)
        {
            
           


            var inputProductName = document.getElementById("pd_Name");

            if (ProductName.indexOf(inputProductName.value) > -1) {
                //In the array!
                var validationProductName = document.getElementById("pd_Name_validation");
                validationProductName.innerHTML = 'Product is exist';
            } else {
                //Not in the array
            }

        }
</script>