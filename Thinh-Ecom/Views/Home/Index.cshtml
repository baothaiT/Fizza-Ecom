<!-- product section -->
<div class="product-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">Our</span> Products</h3>
                    <p>Everyone loves a good slice of pizza, and some people love it enough to make it their entire job and livelihood. If you're thinking about starting a small business, and are specifically wondering how to open a pizza shop, we're here to help.</p>
                </div>
            </div>
        </div>

        <div class="row">

            @{
                int i = 0;
                foreach (var item in ViewBag.ProductList)
                {
                    if (i < 3)
                    {
                        <div class="col-lg-4 col-md-6 text-center" height="400" width="250">
                            <div class="single-product-item">
                                <div class="product-image">
                                    <a href="/addtocart?pd_Id=@item.pd_Id"><img src="@item.pd_Img1" alt=""></a>
                                </div>
                                <h3>@item.pd_Name</h3>
                                <p class="product-price"><span>@item.pd_ShortDescription</span> @item.pd_Price$ </p>
                                <a href="/addtocart?pd_Id=@item.pd_Id" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                            </div>
                        </div>
                    }
                    i++;
                }


            }




        </div>
    </div>
</div>
<!-- end product section -->

