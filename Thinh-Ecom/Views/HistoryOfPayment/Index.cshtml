@{

}

<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Get 24/7 Support</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="checkout-section mt-150 mb-150">
    <div class="container">
        <div class="row ">
            <div class="container mt-5 px-2">
                <div>
                    <h3>
                        Payment History
                    </h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-responsive table-borderless">
                        <thead>
                            <tr class="bg-light">
                                <th scope="col" width="5%"></th>
                                <th scope="col" width="5%">#</th>
                                <th scope="col" width="20%">Date</th>
                                <th scope="col" width="10%">Status</th>
                                <th scope="col" width="20%">Customer</th>
                                <th scope="col" width="20%">Type Payment</th>
                                <th scope="col" class="text-end" width="20%"><span>Revenue</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 0;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row"></th>
                                        <td>@i</td>
                                        <td>@item.Date</td>
                                        <td><i class="fa fa-check-circle-o green"></i><span class="ms-1">@item.Status_Confirm</span></td>
                                        <td><img src="https://i.imgur.com/VKOeFyS.png" width="25">@item.Name_Product</td>
                                        <td>@item.Type_Payment</td>
                                        <td class="text-end">
                                            <span class="fw-bolder">$@item.Price</span>
                                            <i class="fa fa-ellipsis-h ms-2"></i>
                                        </td>
                                    </tr>

                                    i++;
                                }
                            }







                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
