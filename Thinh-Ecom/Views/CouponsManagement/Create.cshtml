@model Thinh_Ecom.Entities.Coupons

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Coupons</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="couponCode" class="control-label"></label>
                <input asp-for="couponCode" class="form-control" />
                <span asp-validation-for="couponCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="couponPrice" class="control-label"></label>
                <input asp-for="couponPrice" class="form-control" min="1" />
                <span asp-validation-for="couponPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

